<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.samplebootapp.infrastructure.order.mapper.CartMapper">

    <resultMap id="CartResultMap" type="com.example.samplebootapp.domain.order.model.Cart">
        <id property="id" column="id" typeHandler="com.example.samplebootapp.infrastructure.order.mapper.typehandler.CartIdTypeHandler"/>
        <result property="userId" column="user_id"/>
        <collection property="items" ofType="com.example.samplebootapp.domain.order.model.CartItem" select="findItemsByCartId" column="id"/>
    </resultMap>

    <resultMap id="CartItemResultMap" type="com.example.samplebootapp.domain.order.model.CartItem">
        <constructor>
            <arg column="product_id" javaType="String"/>
            <arg column="quantity" javaType="_int"/>
        </constructor>
    </resultMap>

    <resultMap id="CartItemDtoResultMap" type="com.example.samplebootapp.application.order.query.CartItemDto">
        <constructor>
            <arg column="product_id" javaType="String"/>
            <arg column="product_name" javaType="String"/>
            <arg column="quantity" javaType="_int"/>
        </constructor>
    </resultMap>

    <insert id="insertCart">
        INSERT INTO order_carts (id, user_id)
        VALUES (#{id.value}, #{userId})
    </insert>

    <delete id="deleteCartItems">
        DELETE FROM order_cart_items WHERE cart_id = #{cartId}
    </delete>

    <insert id="insertCartItem">
        INSERT INTO order_cart_items (cart_id, product_id, quantity)
        VALUES (#{cartId}, #{item.productId}, #{item.quantity})
    </insert>

    <select id="findByUserId" resultMap="CartResultMap">
        SELECT id, user_id
        FROM order_carts
        WHERE user_id = #{userId}
    </select>

    <select id="findItemsByCartId" resultMap="CartItemResultMap">
        SELECT product_id, quantity
        FROM order_cart_items
        WHERE cart_id = #{cartId}
    </select>

    <select id="findCartIdByUserId" resultType="String">
        SELECT id
        FROM order_carts
        WHERE user_id = #{userId}
    </select>

    <select id="findCartItemDtos" resultMap="CartItemDtoResultMap">
        SELECT
            i.product_id,
            p.name as product_name,
            i.quantity
        FROM order_cart_items i
        LEFT JOIN product_products p ON i.product_id = p.id
        WHERE i.cart_id = #{cartId}
    </select>

</mapper>
